	<!-- Maven Profiles -->
	<profiles>
		<!-- Development Profile -->
		<profile>
			<id>dev</id>
			<properties>
				<spring.profiles.active>dev</spring.profiles.active>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>  <!-- Dev profile is
				active by default -->
			</activation>
		</profile>

		<!-- Testing Profile -->
		<profile>
			<id>test</id>
